<GuiSpriteCtrl
    Name="ConsoleDialog"
    Profile="GuiToolboxProfile"
    HorizSizing="width"
    VertSizing="height"
    Position="0 0"
    Extent="1024 768"
    MinExtent="8 8"
    Visible="1"
	HelpTag="0"
	Image="@asset=Sandbox:blueGradient">
	
	<!-- Console Command Entry -->
    <GuiConsoleEditCtrl
        Name="ConsoleEntry"
		Profile="GuiConsoleTextEditProfile"
		HorizSizing="width"
		VertSizing="top"
		Position="0 738"
		Extent="914 30"
		minExtent="8 8"
		Visible="1"
		AltCommand="ConsoleEntry::eval();"
		HelpTag="0"
		MaxLength="255"
		HistorySize="40"
		password="0"
		TabComplete="0"
		SinkAllKeyEvents="1"
		UseSiblingScroller="1"
	/>
