    <GuiScrollCtrl
		Name="ConsoleScrollCtrl"
        canSaveDynamicFields="0"
        isContainer="1"
        Profile="ConsoleScrollProfile"
        HorizSizing="width"
        VertSizing="height"
        Position="0 0"
        Extent="1024 738"
        MinExtent="8 8"
        canSave="1"
        Visible="1"
        hovertime="1000"
        willFirstRespond="1"
        hScrollBar="alwaysOn"
        vScrollBar="alwaysOn"
        constantThumbHeight="0"
        childMargin="0 0">
		
		<!-- Console Log -->
        <GuiConsole
            Profile="GuiConsoleProfile"
            Position="0 0"
			Extent="1024 738"
			HorizSizing="width"
			VertSizing="height"			
            Visible="1"/>
    </GuiScrollCtrl>
